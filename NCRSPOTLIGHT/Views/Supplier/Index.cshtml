@model IEnumerable<EntitiesLayer.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h1>Suppliers</h1>

<p>
    <a asp-action="Create" class="btn button-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn button-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ID" class="btn button-secondary">Details</a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
