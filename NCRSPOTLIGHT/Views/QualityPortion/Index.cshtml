@using EntitiesLayer.ViewModels
@model IEnumerable<QualityPortionsWithRepViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-horizontal">
        <div class="row">
            <div class="form-group col-md-4">
                <label class="control-label">Filter by Product:<label>
                @Html.DropDownList("ProductID", null, "Any Product", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group col-md-4">
                <label class="control-label">Filter by Representative:</label>
                @Html.DropDownList("RepId", null, "Any Representative", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group col-md-4 align-self-end">
                <input type="submit" name="actionButton" value="Filter" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
            </div>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QualityPortion.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QualityPortion.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QualityPortion.QuantityDefective)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QualityPortion.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Representative.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QualityPortion.Product.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QualityPortion.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QualityPortion.QuantityDefective)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QualityPortion.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Representative.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.QualityPortion.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.QualityPortion.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.QualityPortion.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
