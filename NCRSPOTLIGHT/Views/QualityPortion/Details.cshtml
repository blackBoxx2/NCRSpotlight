@model EntitiesLayer.Models.QualityPortion

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>QualityPortion</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantityDefective)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantityDefective)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DefectDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DefectDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RepID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RepID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.qualityPictures)
        </dt>
        <dd class="col-sm-10">
            <div>
                @foreach (var pic in Model.qualityPictures)
                {
                    <img src="data:image;base64,@System.Convert.ToBase64String(pic.FileContent.Content)" width="100" height="100" />
                }
            </div>
        </dd>
    </dl>
</div>
<div>
