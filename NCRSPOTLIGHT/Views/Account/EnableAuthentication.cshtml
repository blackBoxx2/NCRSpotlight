@using EntitiesLayer.Models.ViewModels

@model TwoFactorAuthenticationVIewModel

<div class="row col-md-10 offset-mid-1 mfa-container">
    <h1 class=" text-center pt-2"> Enable Two Factor Authentication</h1>
    <form method="post">
        <div class="  p-2 rounded">
            <p class="text-center">Please Enter the Code below into your authenticator app</p>
            <p class="text-center">@Model.Token</p>
            <p class="text-center">
                Alternatively, scan the QRCode below with your mobile device
            </p>
            <div class="text-center " id="qrCode">
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            
            <div class="form-group pt-2">
                <div class="col-md-6 offset-md-3">
                    <button class="btn button-primary form-control">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <script src="~/js/qrcode.js"></script>
        <script type="text/javascript">
            new QRCode(document.getElementById("qrCode"), "@Model.QRCodeUrl");
        </script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}