
@model LoginViewModel
@using EntitiesLayer.Models.ViewModels
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManager

<link rel="stylesheet" href="~/css/log_in.css" asp-append-version="true" />

<div class="all-sections">
    <h1 class="main-title"> Log In</h1>
    <div class="row">
        <div class="col-md-6">
    <section class="form-section">
    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <div class="content border p-2 rounded row-cols-md-8">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group pt-2">
                <label asp-for="Email" class="col-12 text-md-start"></label>
                <div class="col-md-12">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger "></span>
                </div>
            </div>

            <div class="form-group pt-2">
                    <label asp-for="Password" class="col-12 text-md-start"></label>
                <div class="col-md-12">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group pt-2">
                <div class="col-md-12">
                <label asp-for="RememberMe" class="col-12"> Remember Me?
                <input asp-for="RememberMe" />
                </label>
                </div>
            </div>

            <div class="form-group pt-3">
                <div class="text-left">
                    <button class="btn_login">Login</button>
                </div>

                <div class="row-cols-md-4">
                    <div class="col-12" style="width:100%;">
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]"> Register as a new user?</a>
                    </div>                    
                    <div class="col-12" style="width:100%">
                        <a asp-action="ForgotPassword"> Forgot Password?</a>
                    </div>
                </div>
            </div>
        </div> 

        </form>
        </section>
        </div>
                <div class="col-md-6">
                    <section class="welcome-form-section">
                        <div class="welcome-section text-center">
                            <img src="/images/crossfire_logo.png" class="img-crsf-logo" />
                            <h2>Welcome Again</h2>
                            <p>We are glad to take you back, explore our new system to make your life easier with the NCRS reports</p>
                        </div>
                    </section>
                </div>
    </div>
    <section class="btns-section">
        <div class=" row-cols-md-2" style="margin-right:40px; margin-top:0px;">
            <form class="row d-flex" method="post" asp-action="Login">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    <div class="btn-group">
                            <button class="btn-group-child" type="submit" name="email" value="admin@email.com">Admin Login</button>
                            <button class="btn-group-child" type="submit" name="email" value="qa@email.com">QualityAssurance Login</button>
                            <button class="btn-group-child" type="submit" name="email" value="basic@email.com">Basic Login</button>
                            <button class="btn-group-child" type="submit" name="email" value="engineer@email.com">Engineer Login</button>
                            <button class="btn-group-child" type="submit" name="email" value="superAdmin@email.com">SuperAdmin Login</button>
                    </div>
        </form>
     </div>
    </section>
    
   
    @{
        var schemes = await signInManager.GetExternalAuthenticationSchemesAsync();
        var loginProviders = schemes.ToList();
    }

    @if (loginProviders.Count() > 0)
    {
        <div class="p-3">
            <hr />
            <div class="col-12 p-3 text-center border rounded">
                <section>
                    <p>Use Another service to log in</p>
                    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post"
                    role="form">
                    <div>
                        <p>
                            @foreach(var provider in loginProviders)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider"
                                    value="@provider.Name">@provider.DisplayName</button>
                                }
                            </p>
                    </div>

                    </form>
                </section>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
