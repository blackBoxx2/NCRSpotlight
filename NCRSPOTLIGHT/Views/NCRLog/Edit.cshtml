@using EntitiesLayer.Models
@using Plugins.DataStore.SQLite
@model EntitiesLayer.Models.ViewModels.NCRLogViewModel
@{
    ViewData["Title"] = "Edit";
    string? user = ViewData["User"] as string;
    bool isQualityAssurance = ViewBag.QASection == "enabled";
    bool isEngineer = ViewBag.EngineerSection == "enabled";
    bool isAdmin = ViewBag.IsAdmin;
}

<h1>Edit</h1>

<h4>NCRLog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NCR.ID" />
            <input type="hidden" asp-for="NCR.QualityPortionID" />
            <input type="hidden" asp-for="NCR.EngPortionID" />

            <div class="accordion" id="qualityAccordion">

                <div class="accordion-Item">

                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <h3 class="Accordion-Header" id="qualityHeading">Quality Assurance</h3>
                    </button>

                </div>              

                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#qualityAccordion">
                    <div class="accordion-body">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">

                            <label asp-for="NCR.QualityPortion.ProductID" class="control-label"></label>
                            @if (isQualityAssurance || isAdmin)
                            {
                                <select asp-for="NCR.QualityPortion.ProductID" class="form-control" asp-items="ViewBag.ProductID" onchange="fool(this.value)"></select>
                            }
                            else
                            {
                                <select asp-for="NCR.QualityPortion.ProductID" class="form-control" asp-items="ViewBag.ProductID" disabled="disabled"></select>
                            }
                            <span asp-validation-for="NCR.QualityPortion.ProductID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NCR.QualityPortion.Quantity" class="control-label"></label>
                            @if (isQualityAssurance || isAdmin)
                            {
                                <input asp-for="NCR.QualityPortion.Quantity" class="form-control" />
                            }
                            else
                            {
                                <input asp-for="NCR.QualityPortion.Quantity" class="form-control" readonly="readonly" />
                            }
                            <span asp-validation-for="NCR.QualityPortion.Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NCR.QualityPortion.QuantityDefective" class="control-label"></label>
                            @if (isQualityAssurance || isAdmin)
                            {
                                <input asp-for="NCR.QualityPortion.QuantityDefective" class="form-control" />
                            }
                            else
                            {
                                <input asp-for="NCR.QualityPortion.QuantityDefective" class="form-control" readonly="readonly" />
                            }
                            <span asp-validation-for="NCR.QualityPortion.QuantityDefective" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NCR.QualityPortion.OrderNumber" class="control-label"></label>
                            @if (isQualityAssurance || isAdmin)
                            {
                                <input asp-for="NCR.QualityPortion.OrderNumber" class="form-control" />
                            }
                            else
                            {
                                <input asp-for="NCR.QualityPortion.OrderNumber" class="form-control" readonly="readonly" />
                            }
                            <span asp-validation-for="NCR.QualityPortion.OrderNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NCR.QualityPortion.DefectDescription" class="control-label"></label>
                            @if (isQualityAssurance || isAdmin)
                            {
                                <textarea asp-for="NCR.QualityPortion.DefectDescription" class="form-control" rows="4" cols="50"></textarea>
                            }
                            else
                            {
                                <textarea asp-for="NCR.QualityPortion.DefectDescription" class="form-control" rows="4" cols="50" readonly="readonly"></textarea>
                            }
                            <span asp-validation-for="NCR.QualityPortion.DefectDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NCR.QualityPortion.RepID" class="control-label"></label>
                            <input asp-for="NCR.QualityPortion.RepID" class="form-control" readonly="readonly" />
                        </div>
                        <div class="form-group">
                            <label class="control-label custom-file-label">Upload Pictures: </label>
                            @if (isQualityAssurance || isAdmin)
                            {
                                <input type="file" class="form-control" name="theFiles" multiple="multiple"
                                       onchange="document.getElementById('ImagePreview').src = window.URL.createObjectURL(this.files[0])" />
                            }
                            else
                            {
                                <input type="file" class="form-control" name="theFiles" multiple="multiple"
                                       onchange="document.getElementById('ImagePreview').src = window.URL.createObjectURL(this.files[0])" disabled="disabled" />
                            }
                            <img id="ImagePreview" src="" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion" id="engineerAccordion">

                <div class="accordion-Item">

                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseOne">
                        <h3 class="Accordion-Header" id="engineerHeading">Engineering</h3>
                    </button>

                </div>

                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#engineerAccordion">
                    <div class="accordion-body">
                        <div class="form-group">
                            <label asp-for="NCR.EngPortion.EngReview" class="control-label"></label>
                            <select asp-for="NCR.EngPortion.EngReview" class="form-control" asp-items="@Html.GetEnumSelectList<EngReview>()"></select>
                            <span asp-validation-for="NCR.EngPortion.EngReview" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NCR.EngPortion.Disposition" class="form-label"></label>
                            <textarea asp-for="NCR.EngPortion.Disposition" class="form-control" rows="4" cols="50" class="form-control"></textarea>
                            <span asp-validation-for="NCR.EngPortion.Disposition" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NCR.EngPortion.Update" class="form-check-label"></label>
                            <input asp-for="NCR.EngPortion.Update" class="form-check-input" type="checkbox" />
                            <span asp-validation-for="NCR.EngPortion.Update" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NCR.EngPortion.Notif" class="form-check-label"></label>
                            <input asp-for="NCR.EngPortion.Notif" class="form-check-input" type="checkbox" />
                            <span asp-validation-for="NCR.EngPortion.Notif" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NCR.EngPortion.RevNumber" class="control-label"></label>
                            <input type="number" asp-for="NCR.EngPortion.RevNumber" class="form-control" />
                            <span asp-validation-for="NCR.EngPortion.RevNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NCR.EngPortion.RevDate" class="control-label"></label>
                            <input asp-for="NCR.EngPortion.RevDate" class="form-control" value="" />
                            <span asp-validation-for="NCR.EngPortion.RevDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NCR.EngPortion.RepID" class="control-label"></label>
                            <input asp-for="NCR.EngPortion.RepID" class="form-control" />
                            <span asp-validation-for="NCR.EngPortion.RepID" class="text-danger"></span>
                        </div>


                    </div>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="NCR.DateCreated" class="control-label"></label>
                <input asp-for="NCR.DateCreated" class="form-control" />
                <span asp-validation-for="NCR.DateCreated" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NCR.Status" class="control-label"></label>
                <select asp-for="NCR.Status" asp-items="@Html.GetEnumSelectList<NCRStatus>()" class="form-control"></select>
                <span asp-validation-for="NCR.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
