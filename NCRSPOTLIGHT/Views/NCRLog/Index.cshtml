@model IEnumerable<EntitiesLayer.Models.NCRLog>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-horizontal">
        <div class="row">
            <div class="form-group col-md-3">
                <label class="control-label">Start Date:</label>
                <input class="form-control" type="date" id="StartDate" name="StartDate"
                       value="@ViewData["StartDate"]" aria-describedby="EndDate" aria-invalid="false">
            </div>
            <div class="form-group col-md-3">
                <label class="control-label">End Date:</label>
                <input class="form-control" type="date" id="StartDate" name="EndDate"
                       value="@ViewData["EndDate"]" aria-describedby="EndDate" aria-invalid="false">
            </div>
            <div class="form-group col-md-4 align-self-end">
                <input type="submit" name="actionButton" value="Filter" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
            </div>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QualityPortion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr onclick="window.open('@Url.Action("Details", "NCRLog", new{ID = item.ID})','_blank');" style="cursor:pointer;"
                ncrlog-id="@item.ID"> 

            <td>
                @Html.DisplayFor(modelItem => item.QualityPortion.DefectDescription)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSummary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            
        </tr>
}
    </tbody>
</table>
