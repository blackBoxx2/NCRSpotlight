@using EntitiesLayer.Models
@model EntitiesLayer.Models.NCRLog

@{
    ViewData["Title"] = "Create";
    string? user = ViewData["User"] as string;
    bool isQualityAssurance = ViewBag.QASection == "enabled";
    bool isEngineer = ViewBag.EngineerSection == "enabled";
    bool isAdmin = ViewBag.IsAdmin;
}

<h1>Create</h1>

<h2>NCRLog</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="accordion" id="qualityAccordion">

                <div class="accordion-Item">
                    
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <h3 class="Accordion-Header" id="qualityHeading">Quality Assurance</h3>
                    </button>

                </div>              

                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#qualityAccordion">
                    <div class="accordion-body">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="QualityPortion.ProductID" class="control-label"></label>
                                @Html.Raw("<span class='text-danger'>*</span>")
                            @if (isQualityAssurance || isAdmin)
                            {
                                <select asp-for="QualityPortion.ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
                            }
                            else
                            {
                                <select asp-for="QualityPortion.ProductID" class="form-control" asp-items="ViewBag.ProductID" disabled="disabled"></select>
                            }
                            <span asp-validation-for="QualityPortion.ProductID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="QualityPortion.Quantity" class="control-label"></label>
                                @Html.Raw("<span class='text-danger'>*</span>")
                            @if (isQualityAssurance || isAdmin)
                            {
                                <input asp-for="QualityPortion.Quantity" class="form-control" />
                            }
                            else
                            {
                                <input asp-for="QualityPortion.Quantity" class="form-control" readonly="readonly" />
                            }
                            <span asp-validation-for="QualityPortion.Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="QualityPortion.QuantityDefective" class="control-label"></label>
                                @Html.Raw("<span class='text-danger'>*</span>")
                            @if (isQualityAssurance || isAdmin)
                            {
                                <input asp-for="QualityPortion.QuantityDefective" class="form-control" />
                            }
                            else
                            {
                                <input asp-for="QualityPortion.QuantityDefective" class="form-control" readonly="readonly" />
                            }
                            <span asp-validation-for="QualityPortion.QuantityDefective" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="QualityPortion.OrderNumber" class="control-label"></label>
                                @Html.Raw("<span class='text-danger'>*</span>")
                            @if (isQualityAssurance || isAdmin)
                            {
                                <input asp-for="QualityPortion.OrderNumber" class="form-control" />
                            }
                            else
                            {
                                <input asp-for="QualityPortion.OrderNumber" class="form-control" readonly="readonly" />
                            }
                            <span asp-validation-for="QualityPortion.OrderNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="QualityPortion.DefectDescription" class="control-label"></label>
                                @Html.Raw("<span class='text-danger'>*</span>")
                            @if (isQualityAssurance || isAdmin)
                            {
                                <textarea asp-for="QualityPortion.DefectDescription" class="form-control" rows="4" cols="50"></textarea>
                            }
                            else
                            {
                                <textarea asp-for="QualityPortion.DefectDescription" class="form-control" rows="4" cols="50" readonly="readonly"></textarea>
                            }
                            <span asp-validation-for="QualityPortion.DefectDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="QualityPortion.RepID" class="control-label"></label>
                            @if (isQualityAssurance || isAdmin)
                            {
                                <input asp-for="QualityPortion.RepID" class="form-control" />
                            }
                            else
                            {
                                <input asp-for="QualityPortion.RepID" class="form-control" readonly="readonly" />
                            }
                        </div>
                        <div class="form-group">
                            <label class="control-label custom-file-label">Upload Pictures: </label>
                            @if (isQualityAssurance || isAdmin)
                            {
                                <input type="file" class="form-control" name="theFiles" multiple="multiple"
                                       onchange="document.getElementById('ImagePreview').src = window.URL.createObjectURL(this.files[0])" />
                            }
                            else
                            {
                                <input type="file" class="form-control" name="theFiles" multiple="multiple"
                                       onchange="document.getElementById('ImagePreview').src = window.URL.createObjectURL(this.files[0])" disabled="disabled" />
                            }
                            <img id="ImagePreview" src="" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">NonConforming: </label>
                            @Html.Raw("<span class='text-danger'>*</span>")
                            @if (isQualityAssurance || isAdmin)
                            {
                                <input type="checkbox" class="form-check-input" checked />
                            }
                            else
                            {
                                <input type="checkbox" class="form-check-input" checked disabled="disabled" />
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion" id="engineerAccordion">

                <div class="accordion-Item">

                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseOne">
                        <h3 class="Accordion-Header" id="engineerHeading">Engineering</h3>
                    </button>

                </div>

                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#engineerAccordion">
                    <div class="accordion-body">
                        <div class="form-group">
                            <label asp-for="EngPortion.EngReview" class="control-label"></label>
                                @Html.Raw("<span class='text-danger'>*</span>")
                            @if (isEngineer || isAdmin)
                            {
                                <select asp-for="EngPortion.EngReview" class="form-control" asp-items="@Html.GetEnumSelectList<EngReview>()"></select>
                            }
                            else
                            {
                                <select asp-for="EngPortion.EngReview" class="form-control" asp-items="@Html.GetEnumSelectList<EngReview>()" disabled="disabled"></select>
                            }
                            <span asp-validation-for="EngPortion.EngReview" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EngPortion.Disposition" class="form-label"></label>
                                @Html.Raw("<span class='text-danger'>*</span>")
                            @if (isEngineer || isAdmin)
                            {
                                <textarea asp-for="EngPortion.Disposition" class="form-control" rows="4" cols="50"></textarea>
                            }
                            else
                            {
                                <textarea asp-for="EngPortion.Disposition" class="form-control" rows="4" cols="50" readonly="readonly"></textarea>
                            }
                            <span asp-validation-for="EngPortion.Disposition" class="text-danger"></span>
                        </div>
                        <div class="form-group"> <!--Not Required -->
                            <label asp-for="EngPortion.Update" class="form-check-label"></label>
                            @if (isEngineer || isAdmin)
                            {
                                <input asp-for="EngPortion.Update" class="form-check-input" type="checkbox" />
                            }
                            else
                            {
                                <input asp-for="EngPortion.Update" class="form-check-input" type="checkbox" disabled="disabled" />
                            }
                            <span asp-validation-for="EngPortion.Update" class="text-danger"></span>
                        </div>
                        <div class="form-group"> <!-- Not required -->
                            <label asp-for="EngPortion.Notif" class="form-check-label"></label>
                            @if (isEngineer || isAdmin)
                            {
                                <input asp-for="EngPortion.Notif" class="form-check-input" type="checkbox" />
                            }
                            else
                            {
                                <input asp-for="EngPortion.Notif" class="form-check-input" type="checkbox" disabled="disabled" />
                            }
                            <span asp-validation-for="EngPortion.Notif" class="text-danger"></span>
                        </div>
                        <div class="form-group"> <!-- Not required -->
                            <label asp-for="EngPortion.RevNumber" class="control-label"></label>
                            @if (isEngineer || isAdmin)
                            {
                                <input type="number" asp-for="EngPortion.RevNumber" class="form-control" />
                            }
                            else
                            {
                                <input type="number" asp-for="EngPortion.RevNumber" class="form-control" readonly="readonly" />
                            }
                            <span asp-validation-for="EngPortion.RevNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EngPortion.RevDate" class="control-label"></label>
                                 @Html.Raw("<span class='text-danger'>*</span>")
                            @if (isEngineer || isAdmin)
                            {
                                <input asp-for="EngPortion.RevDate" class="form-control" value="" />
                            }
                            else
                            {
                                <input asp-for="EngPortion.RevDate" class="form-control" value="" readonly="readonly" />
                            }
                            <span asp-validation-for="EngPortion.RevDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EngPortion.RepID" class="control-label"></label>
                                @Html.Raw("<span class='text-danger'>*</span>")
                            @if (isEngineer || isAdmin)
                            {
                                <input asp-for="EngPortion.RepID" class="form-control" value="" />
                            }
                            else
                            {
                                <input asp-for="EngPortion.RepID" class="form-control" value="" readonly="readonly" />
                            }
                            <span asp-validation-for="EngPortion.RepID" class="text-danger"></span>
                        </div>


                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input type="date" asp-for="DateCreated" class="form-control" value="" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="@Html.GetEnumSelectList<NCRStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
